#--------------------------------------------------------------------------------------------------------------
#--------------------------------------------------------------------------------------------------------------
# Name: mvn
# Description: mvn
#--------------------------------------------------------------------------------------------------------------
#--------------------------------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------------------------------
#
# Begin mvn make targets
#
#--------------------------------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------------------------------
# mvn test
#--------------------------------------------------------------------------------------------------------------
mvn/test:
	mvn -f java/pom.xml test

#--------------------------------------------------------------------------------------------------------------
# mvn clean
#--------------------------------------------------------------------------------------------------------------
mvn/clean:
	mvn -f java/pom.xml clean

#--------------------------------------------------------------------------------------------------------------
# mvn exec
#--------------------------------------------------------------------------------------------------------------
mvn/exec: mvn/clean
	mvn -f java/pom.xml compile exec:java

#--------------------------------------------------------------------------------------------------------------
# mvn package
#--------------------------------------------------------------------------------------------------------------
mvn/package: mvn/clean
	mvn -f java/pom.xml package

#--------------------------------------------------------------------------------------------------------------
#
# End mvn make targets
#
#--------------------------------------------------------------------------------------------------------------